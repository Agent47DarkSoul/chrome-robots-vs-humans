{

	"manifest_version":	2,

	"name":			"__MSG_extName__",
	"description":	"__MSG_extDescription__",
	"version":		"1.0.2",

	"background":	{
		"scripts":	[
			"background.js"
		]
	},

	"permissions":	[
		"http://*/",
		"https://*/",
		"tabs"
	],

	"page_action":	{
		"default_icon":	{
			"19":	"images/icon19_both.png",
			"38":	"images/icon38_both.png"
		},
		"default_title":	"__MSG_extName__",
		"default_popup":	"popup/popup.html"
	},

	"default_locale": "en",

	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}

}